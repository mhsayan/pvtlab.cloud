---
import type { HTMLAttributes } from "astro/types";
import { SOCIALS } from "@/constants";
import { SITE } from "@/config";

const currentYear = new Date().getFullYear();

type Props = {
  noMarginTop?: boolean;
} & HTMLAttributes<"footer">;

const { noMarginTop = false, class: className, ...attrs } = Astro.props;
---

<footer
  class:list={["app-layout", { "mt-auto": !noMarginTop }, className]}
  {...attrs}
>
  <div class="border-t border-border pt-10 pb-8">
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 sm:gap-12">
      <!-- Brand Column -->
      <div class="sm:col-span-1">
        <a href="/" class="text-xl font-bold hover:text-accent transition-colors">
          {SITE.title}
        </a>
        <p class="mt-3 text-sm text-foreground/60 leading-relaxed">
          {SITE.desc}
        </p>
      </div>

      <!-- Quick Links Column -->
      <div class="sm:col-span-1">
        <h3 class="text-sm font-semibold uppercase tracking-wider text-foreground/80 mb-4">
          Quick Links
        </h3>
        <nav class="flex flex-col gap-2">
          <a href="/posts" class="text-sm text-foreground/60 hover:text-accent transition-colors">
            Posts
          </a>
          <a href="/about" class="text-sm text-foreground/60 hover:text-accent transition-colors">
            About
          </a>
          <a href="/search" class="text-sm text-foreground/60 hover:text-accent transition-colors">
            Search
          </a>
          {
            SITE.showArchives && (
              <a href="/archives" class="text-sm text-foreground/60 hover:text-accent transition-colors">
                Archives
              </a>
            )
          }
        </nav>
      </div>

      <!-- Connect Column -->
      <div class="sm:col-span-1">
        <h3 class="text-sm font-semibold uppercase tracking-wider text-foreground/80 mb-4">
          Connect
        </h3>
        <div class="flex flex-wrap gap-3">
          {
            SOCIALS.map(social => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center size-10 rounded-full bg-muted/50 border border-border text-foreground/70 hover:bg-accent/10 hover:border-accent/50 hover:text-accent transition-all duration-200"
                title={social.linkTitle}
              >
                <social.icon class="size-5 stroke-current stroke-2" />
                <span class="sr-only">{social.linkTitle}</span>
              </a>
            ))
          }
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-10 pt-6 border-t border-border/50">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4 text-sm text-foreground/50">
        <span>
          &copy; {currentYear} {SITE.title}. All rights reserved.
        </span>
        <a
          href="/rss.xml"
          target="_blank"
          class="hover:text-accent transition-colors"
        >
          RSS Feed
        </a>
      </div>
    </div>
  </div>
</footer>
